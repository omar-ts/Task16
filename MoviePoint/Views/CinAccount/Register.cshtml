@model CinRegistVM
<link rel="stylesheet" href="~/css/cinregist.css" />

<div class="main_reg col-12">
    <div class="content_reg col-10">
        <div class="box_reg">
            <div class="upper_reg col-12">
                <h4 style="font-weight:700">Signup</h4>
            </div>
            <div class="choice">
                <a asp-controller="Account" asp-action="Register" class="left_choice">
                    <div class="div_icon_lef">
                        <i class="fa-solid fa-check icon_choice_lef"></i>
                    </div>
                    <p class="p_choice">Personal</p>
                </a>
                <a href="#" class="right_choice">
                    <div class="div_icon_rig">
                        <i class="fa-solid fa-check icon_choice_rig"></i>
                    </div>
                    <p class="p_choice">Cinema</p>
                </a>
            </div>
            <form asp-action="Register" class="middle_reg col-12" enctype="multipart/form-data">
                <div class="col-12">
                    <input type="text" class="in_reg col-12" placeholder="user name" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <input type="email" class="in_reg col-12" placeholder="email" asp-for="Email" />
                    <span asp-validation-for="Email" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <input type="password" class="in_reg col-12" placeholder="password" asp-for="Password" />
                    <span asp-validation-for="Password" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <input type="password" class="in_reg col-12" placeholder="confirm password" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <input type="text" class="in_reg col-12" placeholder="cinema name" asp-for="Name" />
                    <span asp-validation-for="Name" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <input type="file" class="in_reg col-12" id="logo" name="file" />

                    <img src="" class="img_edit" style="display:none" />
                </div>
                <div class="col-12">
                    <input type="text" class="in_reg col-12" placeholder="address" asp-for="Address" />
                    <span asp-validation-for="Address" class="span_in mb-2"></span>
                </div>

                <div class="col-12">
                    <textarea class="in_reg col-12" placeholder="details" asp-for="Detail"></textarea>
                    <span asp-validation-for="Detail" class="span_in mb-2"></span>
                </div>

                <button type="submit" class="btn_reg col-12">Signup</button>
            </form>
            <div class="lower">
                <p class="p_lower">Already have an account? <a class="a_lower" asp-action="Login">Login</a> </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script>
        const logo = document.getElementById("logo");
        const img = document.querySelector(".img_edit");

        logo.addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    img.setAttribute("src", e.target.result);
                    img.style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                img.style.display = "none";
            }
        });
    </script>
}